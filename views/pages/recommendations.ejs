<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/CSS/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script type="module" src="/JS/script.js"></script>
    <title>Discoverfy</title>
</head>
<body>
    <nav>
        <div class="discoverfy">Discoverfy</div>
            <ul>
                <li id="menu-icon"><a href="#"><i class="fa fa-bars"></i></a></li>
                <li class="list-item top hide"><a href="/recenttracks">Recently Played Tracks</a></li>
                <li class="list-item hide"><a href="/toptracks">Top Tracks</a></li>
            </ul>
    </nav>

    <section class="songs">
        <div class="songs-head">
            <h3 class="list-title" id="recommendations-title">Recommendations for [Song Title]</h3>
            <div id="button">
                <button id="create-playlist">Create Playlist</button>
            </div>
        </div>
        <div class="list">
            <% songs.forEach(song => { %>
            <div class="song-list-item">
                <div class="song-details">
                    <img class="album-img"id="recommendation-img" src="https://yt3.ggpht.com/ytc/AAUvwng9i-_mtPyX12pclYOOHahF4sUWHIqi58OrwpGh=s900-c-k-c0x00ffffff-no-rj" alt="album art">
                    <p class="song-title" id="recommendation-track-title"><%= song.name %></p>
                    <p class="artists-name" id="recommendation-artists"><%= song.artists %></p>
                </div>    
                <div class="btn-right">
                    <button class="audio-btn"><i class="fa fa-play"></i></button>
                    <audio class="recommend-audio">
                        <source src="<%= song.preview %>" type="audio/mpeg">
                    </audio>
                </div>
            </div>
            <% }) %>                
        </div>
    </section>
</body>
</html>