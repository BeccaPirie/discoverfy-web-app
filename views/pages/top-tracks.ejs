<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/CSS/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script type="module" src="/JS/script.js"></script>
    <title>Discoverfy</title>
</head>
<body>
    <%- include('../partials/header') %>

    <section class="songs">
        <div class="songs-head">
            <h3 class="list-title" id="users-songs-title">Your Top Tracks</h3>   
        </div>
        <div class="list">
            <% songs.forEach(song => { %>
            <div class="song-list-item">
                <div class="song-details">
                    <img class="album-img" id="top-tracks-image" src="<%= song.image %>" alt="album art">
                    <p class="song-title" id="top-tracks-title"><%= song.name %></p>
                    <p class="artists-name" id="top-tracks-artists"><%= song.artists %></p>
                </div>    
                <div class="btn-right">
                    <a href="/recommendations/p?id=<%= song.id %>"><button class="recommendations-btn">Find new music</button></a>
                </div>
            </div>
            <% }) %>
            
        </div>
    </section>
</html>